{
  "expo": {
    "name": "Şapak",
    "slug": "shapak-translator",
    "description": "Şapak - Turkmen translation and AI language companion. Learn Turkmen with 31 languages support, AI assistants, visual translator, and more.",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "splash": {
      "image": "./assets/splash.png",
      "backgroundColor": "#ff8008",
      "resizeMode": "cover"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shapak.translator",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "CFBundleDisplayName": "Şapak",
        "CFBundleName": "Şapak",
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice phrase search.",
        "NSMicrophoneUsageDescription[ru]": "Это приложение использует микрофон для голосового поиска фраз.",
        "NSMicrophoneUsageDescription[tk]": "Bu programma ses gözleg üçin mikrofon ulanýar.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to search phrases by voice.",
        "NSSpeechRecognitionUsageDescription[ru]": "Это приложение использует распознавание речи для поиска фраз голосом.",
        "NSSpeechRecognitionUsageDescription[tk]": "Bu programma ses tanamak arkaly söz tapýar."
      },
      "associatedDomains": []
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ff8008"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.shapak.translator",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "blockedPermissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {},
    "owner": "seydi_123",
    "githubUrl": "https://github.com/seydicharyyev/TurkmenPhrasebook",
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "extra": {
      "translationsVersion": "1.0.0",
      "supportedLanguages": [
        "zh",
        "ru",
        "en",
        "zh",
        "ru",
        "en"
      ],
      "eas": {
        "projectId": "bdcd8d8e-6a47-4985-97e9-ac43702bd9b2"
      }
    }
  }
}
